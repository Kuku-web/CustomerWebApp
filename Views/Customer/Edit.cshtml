@model CustomerWebApp.Models.Customer

@{
    ViewData["Title"] = "Edit Customer";
}

<h2>Edit Customer</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TelephoneNumber" class="control-label"></label>
            <input asp-for="TelephoneNumber" class="form-control" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="submit" style="margin: 20px 0 20px" value="Save" class="btn btn-primary" />
            <a asp-action="Index" style="margin: 20px 0 20px" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>

